{
  "author": "Marcos Sader <xmarcos@gmail.com>",
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "current"
          }
        }
      ]
    ]
  },
  "description": "Say it en chinito.",
  "devDependencies": {
    "@babel/core": "^7.14.8",
    "@babel/preset-env": "^7.14.8",
    "@types/jest": "^26.0.24",
    "babel-jest": "^27.0.6",
    "eslint": "^7.31.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-prettier": "^3.4.0",
    "husky": "^7.0.0",
    "is-ci": "^3.0.0",
    "jest": "^27.0.6",
    "jsdoc": "^3.6.7",
    "lint-staged": "^11.1.1",
    "prettier": "^2.3.2",
    "rollup": "^2.54.0",
    "typescript": "^4.3.5"
  },
  "eslintConfig": {
    "env": {
      "es2021": true,
      "jest": true,
      "node": true
    },
    "extends": [
      "airbnb-base",
      "plugin:prettier/recommended"
    ],
    "plugins": [
      "prettier"
    ]
  },
  "exports": {
    "import": "./src/enchinito.js",
    "require": "./lib/cjs/enchinito.cjs"
  },
  "files": [
    "lib"
  ],
  "jest": {
    "collectCoverage": true,
    "coverageDirectory": "coverage",
    "verbose": true
  },
  "keywords": [
    "chinito",
    "enchinito",
    "meme"
  ],
  "license": "MIT",
  "lint-staged": {
    "*.js": "eslint --fix --format codeframe"
  },
  "main": "./lib/cjs/enchinito.cjs",
  "name": "@xmarcos/enchinito",
  "prettier": {
    "printWidth": 72,
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "all",
    "useTabs": false
  },
  "scripts": {
    "build": "yarn run build:dts && yarn run build:cjs && yarn run build:esm",
    "build:cjs": "rollup src/enchinito.js --file lib/cjs/enchinito.cjs --format cjs",
    "build:dts": "tsc src/enchinito.js --declaration --allowJs --emitDeclarationOnly --outDir lib/",
    "build:esm": "rollup src/enchinito.js --file lib/esm/enchinito.js --format esm",
    "lint": "eslint",
    "prepare": "is-ci || husky install",
    "test": "jest"
  },
  "type": "module",
  "types": "./lib/cjs/enchinito.d.ts",
  "version": "0.1.0",
  "volta": {
    "node": "14.17.3",
    "yarn": "1.22.10"
  }
}
